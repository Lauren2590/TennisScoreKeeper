<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tennis" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.example.android.courtCounter.MainActivity">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:padding="@dimen/four_dp"
                android:text="Player A"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/twentyFive_sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:padding="@dimen/four_dp"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sixty_sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/twentyFour_dp"
                android:layout_marginRight="@dimen/twentyFour_dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="casual"
                android:onClick="addZeroForTeamA"
                android:text="LOVE" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/twentyFour_dp"
                android:layout_marginRight="@dimen/twentyFour_dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="casual"
                android:onClick="addFifteenForTeamA"
                android:text="15 POINTS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/twentyTwo_dp"
                android:layout_marginRight="@dimen/twentyTwo_dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="casual"
                android:onClick="addThirtyForTeamA"
                android:text=" 30 POINTS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyTwo_dp"
                android:layout_marginRight="@dimen/twentyTwo_dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="casual"
                android:onClick="addFortyForTeamA"
                android:text="40 POINTS"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.example.android.courtcounter.MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:padding="@dimen/four_dp"
                android:text="Player B"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/twentyFive_sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:padding="@dimen/four_dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sixty_sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/twentyFour_dp"
                android:layout_marginRight="@dimen/twentyFour_dp"
                android:background="@color/colorPrimary"
                android:fontFamily="casual"
                android:onClick="addZeroForTeamB"
                android:text="LOVE" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/twentyTwo_dp"
                android:layout_marginRight="@dimen/twentyTwo_dp"
                android:background="@color/colorPrimary"
                android:fontFamily="casual"
                android:onClick="addFifteenForTeamB"
                android:text="15 POINTS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/twentyTwo_dp"
                android:layout_marginRight="@dimen/twentyTwo_dp"
                android:background="@color/colorPrimary"
                android:fontFamily="casual"
                android:onClick="addThirtyForTeamB"
                android:text="30 POINTS" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyTwo_dp"
                android:layout_marginRight="@dimen/twentyTwo_dp"
                android:background="@color/colorPrimary"
                android:fontFamily="casual"
                android:onClick="addFortyForTeamB"
                android:text="40 POINTS" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/thirtyTwo_dp"
        android:background="@color/colorPrimary"
        android:fontFamily="casual"
        android:onClick="resetScore"
        android:text="Reset" />


</RelativeLayout>
